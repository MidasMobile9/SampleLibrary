<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="제목을 입력해 주세요." />

    <Button
        android:id="@+id/buttonClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="버터나이프 버튼" />

    <TextView
        android:id="@+id/textViewList1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView 리스트 1" />

    <TextView
        android:id="@+id/textViewList2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView 리스트 2" />

    <TextView
        android:id="@+id/textViewList3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView 리스트 3" />

    <TextView
        android:id="@+id/textViewProperty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="개별 속성 부여(투명도 : 50%)"
        android:textColor="#ff0000"/>

</LinearLayout>